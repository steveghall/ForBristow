
@model SupplyStuff.ViewModels.CreateOrderViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Confirm request</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(u => u.UserId)
    @Html.HiddenFor(d => d.OrderDate)

<div class="row">
    <div class="form-horizontal">
        <h4>Order details</h4>
        <hr />
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Name
                </dt>

                <dd>
                    @ViewBag.Name
                </dd>
                <dt>
                    Hub address
                </dt>

                <dd>
                    @ViewBag.Reference
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Instructions)
                </dt>
                <dd>
                    @Html.TextAreaFor(model => model.Instructions)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <div>
                <table class="table">
                    <tr>
                        <th>
                            Item
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                    @if (Model.Items != null)
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Confirm order" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Shop", null, new { @class = "btn btn-default" })
            </div>
        </div>

    </div>
</div>
}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}